<div class="modal fade" id="search" tabindex="-1" aria-labelledby="newSearch" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newSearch">Chercher un film</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <div aria-hidden="true" class="btn-modal-close">&times;</div>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag movies_path, method: :get do %>
          <div>
            <%= text_field_tag :query,
            params[:query],
            class: "modal-input-form",
            placeholder: "Titre du film Ã  chercher"
            %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
