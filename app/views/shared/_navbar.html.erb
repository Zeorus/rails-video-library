<div class="navbar navbar-expand-sm navbar-light">
  <div class="navbar-left">
    <%= link_to "/", class: "navbar-brand" do %>
      <i class="fas fa-film"></i>
    <% end %>

    <ul class="navbar-menu">
      <li id="home-link" class="navbar-option <%= 'active' if current_page?(root_path) %>">
        <%= link_to "Accueil", "/" %>
      </li>
        <li class="navbar-option <%= 'active' if current_page?(lists_path) %>">
          <%= link_to "<i class='fas fa-video'></i> <span id='video-link'>Ma Vidéothèque</span>".html_safe, lists_path %>
        </li>
      <li>
        <div class="drop-genres">
          <div class="navbar-option btn-genres dropdown-toggle <%= 'active' if current_page?(moviesbygenre_path) %>" id="genresDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Genres <i class="fas fa-sort-down"></i>
          </div>
          <div class="dropdown-menu" aria-labelledby="genresDropdown">
            <%= link_to "Action", moviesbygenre_path(id: "28"), class: "dropdown-item" %>
            <%= link_to "Aventure", moviesbygenre_path(id: "12"), class: "dropdown-item" %>
            <%= link_to "Animation", moviesbygenre_path(id: "16"), class: "dropdown-item" %>
            <%= link_to "Comédie", moviesbygenre_path(id: "35"), class: "dropdown-item" %>
            <%= link_to "Crime", moviesbygenre_path(id: "80"), class: "dropdown-item" %>
            <%= link_to "Documentaire", moviesbygenre_path(id: "99"), class: "dropdown-item" %>
            <%= link_to "Drame", moviesbygenre_path(id: "18"), class: "dropdown-item" %>
            <%= link_to "Familial", moviesbygenre_path(id: "10751"), class: "dropdown-item" %>
            <%= link_to "Fantastique", moviesbygenre_path(id: "14"), class: "dropdown-item" %>
            <%= link_to "Histoire", moviesbygenre_path(id: "36"), class: "dropdown-item" %>
            <%= link_to "Horreur", moviesbygenre_path(id: "27"), class: "dropdown-item" %>
            <%= link_to "Musique", moviesbygenre_path(id: "10402"), class: "dropdown-item" %>
            <%= link_to "Mystère", moviesbygenre_path(id: "9648"), class: "dropdown-item" %>
            <%= link_to "Romance", moviesbygenre_path(id: "10749"), class: "dropdown-item" %>
            <%= link_to "Science-Fiction", moviesbygenre_path(id: "878"), class: "dropdown-item" %>
            <%= link_to "Téléfilm", moviesbygenre_path(id: "10770"), class: "dropdown-item" %>
            <%= link_to "Thriller", moviesbygenre_path(id: "53"), class: "dropdown-item" %>
            <%= link_to "Guerre", moviesbygenre_path(id: "10752"), class: "dropdown-item" %>
            <%= link_to "Western", moviesbygenre_path(id: "37"), class: "dropdown-item" %>
          </div>
        </div>
      </li>
    </ul>
  </div>

  <%# <div class="collapse navbar-collapse" id="navbarSupportedContent"></div> %>

  <div>
    <ul class="navbar-nav mr-auto">
      <div id="movies-searchbar">
        <%= form_tag movies_path, method: :get do %>
          <div class="laptop-searchbar">
            <%= text_field_tag :query,
            params[:query],
            class: "input-form",
            placeholder: "Rechercher un film"
            %>
          </div>
        <% end %>
        <div class="mobile-search">
          <i class="fas fa-search" data-toggle="modal" data-target="#search"></i>
        </div>
      </div>
    
      <% if user_signed_in? %>
        <li class="nav-item dropdown dropdown-navbar">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <i class="fas fa-user-circle avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Paramètres", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Connexion", new_user_session_path, class: "navbar-option" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
